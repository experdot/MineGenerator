<Window x:Class="MineGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineGenerator"
        mc:Ignorable="d"
        Title="MineGenerator" Height="450" Width="800">
    <Window.Resources>
        <local:BitmapConverterViewModel x:Key="viewModel"></local:BitmapConverterViewModel>
    </Window.Resources>
    <Grid DataContext="{StaticResource ResourceKey=viewModel}">
        <Button Content="Generate" HorizontalAlignment="Center" Command="{Binding GenerateCommand}" CommandParameter="{Binding Image}" VerticalAlignment="Center" />
    </Grid>
</Window>
